<div class="container">
  <h3><%= @list.title %></h3>

  <ul id='list_tasks'>
    <% if @list.tasks.any? %>
      <% @list.tasks.each do |task| %>
        <li><%= task.description %></li>
      <% end %>
    <% else %>
      <p>None yet!</p>
    <% end %>
  </ul>

  <p><%= link_to "Add a task", new_list_task_path(@list), id: "new_task_link", class: "btn btn-default", remote: true %></p>
</div>
