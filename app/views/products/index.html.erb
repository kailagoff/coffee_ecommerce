<div class="container">
  <% @products.each do |product| %>
    <div class="col-md-3">
      <h5><%= link_to product.name, product_path(product), remote: true %></h5>
      <h6 id="product_description"><%= product.description %></h6>
      <h6><%= number_to_currency product.price %></h6>
      <%= form_for @order_item do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.number_field :quantity %>
      <%= f.submit "Add to Cart", class: 'btn btn-info' %>
      <% end %>
      <br><br><br><br><br><br>
    </div>
  <% end %>
</div>
